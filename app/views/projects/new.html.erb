<div class="row">
	<div class="large-12 columns">
		<h3>Create a Project</h3>

		<%= form_for @project do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name, autofocus: true %>
			<% unless @project.errors[:name].empty? %>
				<% @project.errors[:name].each do |err| %>
				<p style="color:red"> <%= :name.to_s.capitalize %> <%= err %> </p>
				<% end %>
			<% end %>

			<%= f.label :description %>
			<%= f.text_area :description %>
			<% unless @project.errors[:description].empty? %>
				<% @project.errors[:description].each do |err| %>
				<p style="color:red"> <%= :description.to_s.capitalize %> <%= err %> </p>
				<% end %>
			<% end %>

			<br />

			<%= f.submit "Create", class:"button" %> or <%= link_to "Go back", projects_path %>
		<% end %>
	</div>
</div>